host <%= @host %> {
<% if not @comment.empty? -%>
  # <%= @comment %>
<% end -%>
  hardware ethernet   <%= @mac.upcase %>;
  fixed-address       <%= @ip %>;
<% if not @ddns_hostname.nil? -%>
  ddns-hostname       "<%= @ddns_hostname %>";
<% end -%>
<% if @ignored -%>
  ignore              booting;
<% end -%>
<% if not @options.empty? -%>
<% @options.keys.sort.each do |option| -%>
  option <%= option %> <%= @options[option] %>;
<% end -%>
<% end -%>
}
